{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "outDir": "dist",
      "declarationDir": "types",
      "types": ["node"],
      "emitDeclarationOnly": true
    },
    "files": [],
    "exclude": [
      "test-configs",
      "jest.config.ts",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.spec.tsx",
      "**/*.test.tsx",
      "**/*.spec.js",
      "**/*.test.js",
      "**/*.spec.jsx",
      "**/*.test.jsx",
      "dist"
    ],
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "rollup.config.cjs"]
  }
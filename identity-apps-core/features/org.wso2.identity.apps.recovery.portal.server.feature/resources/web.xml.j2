        <error-code>504</error-code>
        <location>/errors/error_504.jsp</location>
    </error-page>
    <error-page>
        <location>/errors/error.jsp</location>
    </error-page>

    <session-config>
        <cookie-config>
            <secure>true</secure>
        </cookie-config>
    </session-config>
</web-app>

{
    "name": "validation",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "modules/validation/src",
    "projectType": "library",
    "generators": {},
    "prefix": "@wso2is",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/modules/validation/dist"],
            "options": {
                "tsconfig": "modules/validation/tsconfig.json",
                "command": "pnpm build",
                "cwd": "modules/validation"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm lint",
                "cwd": "modules/validation",
                "parallel": false
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm test",
                "cwd": "modules/validation",
                "parallel": false
            }
        },
        "test-coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm test -- --coverage --collect-coverage",
                "cwd": "modules/validation",
                "parallel": false
            }
        }
    }
}

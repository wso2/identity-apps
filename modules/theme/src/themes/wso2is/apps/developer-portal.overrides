/*-------------------------------
    Monitoring Logs Page
--------------------------------*/

.diagnostic-logs {
    .main-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }

    .scroll-container {
        height: calc(100vh - 450px);
        min-width: 800px;
        font-family: "Gilmer";
        font-style: normal;
        font-weight: 400;
        font-size: 13px;
        line-height: 20px;
        color: #333333;
        overflow-y: scroll;
    }

    .log-header {
        color: #999999;
        display: flex;
        justify-content: space-between;
        padding-left: 16px;
        padding-bottom: 2px;

        .log-Recordedtime {
            margin-right: 30px;
            min-width: 150px;
        }

        .log-description-header {
            display: flex;
            width: 100%;
            align-items: center;
            justify-content: space-between;

            .log-actionId {
                margin-right: 30px;
                padding-left: 8px;
            }

            .log-targetId {
                margin-right: 30px;
            }
        }
    }

    .log-row {
        display: flex;
        align-items: center;
        height: 48px;
        border-bottom: 1px solid #e1e1e3;

        &:hover {
            background-color: #ffffff;
        }

        .placeholder {
            .line {
                background: #fbfbfb;
            }
        }
    }

    .loading-container {
        margin: 10px 0 10px 0;
    }

    .edge-container {
        display: flex;
        height: 50px;
    }

    .log-time-container {
        margin-right: 30px;
        min-width: 150px;
    }

    .log-time {
        color: #999999;
    }

    .log-property {
        color: #999999;
        width: 180px;
        display: inline-block;
        margin-left: 10px;
    }

    .log-expanded-view {

        .ui.mini.basic.compact.icon.button {
            margin-left: 10px;
        }
    }

    .icon-button {
        cursor: pointer;
    }

    .top-action-bar {
        align-items: center;
        background: @white;
        border: @defaultBorderWidth solid @lightBorderColor;
        border-radius: @defaultBorderRadius;
        display: flex;
        justify-content: space-between;
        margin: 0 0 10px 0;
        padding: 8px;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: center;

        .advance-search-form {
            font-family: "Gilmer, sans-serif";
            width: 60%;

            .search-input-wrapper {
                align-items: center;
                display: flex;
                height: 40px;
                justify-content: flex-start;
                margin-right: 8px;

                .search-box {
                    flex-grow: 1;

                    .search-input {
                        border: none;
                        outline: none;
                        width: 100%;
                    }
                }

                .search-box-addons {
                    flex: none;
                }
            }
        }

        .time-range-selector-wrapper {
            display: inline-block;
            margin-right: 10px;

            .icon-btn {
                cursor: pointer;
                margin-left: 10px;
            }
        }
    }

    .layout.list-layout {
        .top-action-panel {
            .actions {
                .ui.dropdown {
                    background: none;
                }
            }
        }
    }

    .log-description-container {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: space-between;

        >.log-desc-loader {
		    width: 70%;
	    }
    }

    .log-targetId-container {
        text-align: right;
        margin-right: 30px;
    }

    .log-actionid-container {
        text-align: right;
        margin-right: 30px;
        font-size: smaller;
        color: #333333;
        border-radius: 10px;
        padding: 4px 8px;
        background: #EFF7FD;
    }

    .top-toolbar {
        >.buttons-row {
            margin: 5px 0 10px 0;
        }

        .ui.button.add-filters-btn {
            margin-right: 15px;
        }

        .ui.label.filter-pill {
            font-size: small;
            color: #FF7300;
            border: 1px solid rgba(255, 115, 0, 0.2);
            border-radius: 10px;
            padding: 8px 12px;
            background: rgba(255, 246, 231, 0.5);
            gap: 10px;

            >.detail {
                color: rgba(0, 0, 0, 1);
            }

            >.icon {
                color: #979797;
            }
        }
    }

    .logs-refresh-component {
        display: flex;
        font-size: smaller;
        justify-content: end;
        margin: 0 10px 0 10px;

        a {
            cursor: pointer;
            margin-left: 8px;
            text-decoration: none;
        }
    }

    .diagnostic-logs-delay-message {
        display: flex;
        justify-content: center;
        margin-top: 20px;

        .ui.info.message {
            min-height: auto;
        }
    }
}


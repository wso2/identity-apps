.connection-code-segment {
    width: 75%;
    border: 1px solid @defaultBorderColor;
}

.quick-start-step-container {
    counter-reset: my-sec-counter;
    position: relative;

    .step-content {

        .step-previous {
            border: none !important;
            outline: none;
            background: none;
        }

        .code-segment {
            position:relative;

            .action-buttons {
                position: absolute;
                right: 1em;
                z-index: 100;

                button {
                    margin: 1em 1em 1em 0;
                    float: right;
                }

                .copy-config {
                    visibility: hidden;
                }
            }

            &:hover {
                .action-buttons {
                    .copy-config {
                        visibility: visible;
                    }
                }
            }
        }

        .secondary.menu {
            margin: 0 !important;
        }

        .segment.tab{
            padding: 0 !important;
        }

        .message {
            p {
                line-height: 2.5em;
            }

            &::after {
                content: "";
                clear: both;
                display: block;
            }
        }

        .sample-action-button {
            line-height: 2.5em;

            &.download {
                background-color: @white !important;
            }

            &.github {
                &:hover {
                    background-color: lighten(@galleryGray, 5) !important;
                }
            }
        }
    }

    .step-content-container {
        padding-left: @quickStartStepPaddingLeft;
        margin-top: @quickStartStepMarginTop;
    }

    .quick-start-step {
        line-height: 28px;
        position: relative;

        &.initial {
            height: 70px;
            &:before {
                background-color: #C3C3C3 !important;
            }

            .step-content {
                height: 1.5em;
                visibility: hidden !important;
            }
        }

        &.complete {
            height: 70px;
            &::before {
                -ms-transform: scaleX(-1) rotate(-35deg)!important;
                -webkit-transform: scaleX(-1) rotate(-35deg)!important;
                transform: scaleX(-1) rotate(-44deg)!important;
                content: "L"!important;
                font-size: 1.2em!important;
                line-height: 1.9em !important;
            }
            .step-content {
                visibility: hidden !important;
                height: 2em !important;
            }
        }
    }

    .quick-start-step::before {
        counter-increment: my-sec-counter;
        content: counter(my-sec-counter);
        display: inline-block;
        width: 30px;
        height: 30px;
        margin: 0 15px 0 0;
        border-radius: 100%;
        text-align: center;
        background-color: @nobel;
        color: #fff;
        line-height: 2.1em;
    }

    .quick-start-step::after {
        width: 1px;
        height: 100%;
        content: "";
        position: absolute;
        z-index: -1;
        top: 1%;
        bottom: 0;
        left: 14px;
        border-left: 2px dashed @defaultBorderColor;
    }

    .quick-start-step:last-child::after {
        border:none !important;
    }
}


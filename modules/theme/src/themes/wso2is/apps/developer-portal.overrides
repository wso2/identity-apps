/*---------------------------------------
              Theme Swatch
----------------------------------------*/

.theme-swatch {
	display: inline-block;
	width: @themeSwatchWidth;
	margin-right: 16px;
	vertical-align: top;
	margin-bottom: 16px;
	cursor: pointer;
	border: 1px solid #e8e8e8;
	border-radius: 4px;
	overflow: hidden;

	&.active {
	    border-color: @focusedFormBorderColor;
	}

	.theme-preview {
		padding: 0;
		border-bottom: 1px solid rgba(232,232,232,.13);

		.theme-preview-inner {
			.theme-preview-header-nav {
				background-color: @themeSwatchPreviewHeader;
				border-bottom: 1px solid @themeSwatchPreviewHeaderBorderColor;
				height: 14px;
				position: relative;
				display: flex;
				align-items: center;
				justify-content: flex-end;

				.theme-preview-header-nav-close-button {
					background: #ca4e45;
					width: 6px;
					height: 6px;
					border-radius: 50%;
					margin-right: 6px;
				}
			}
			.theme-preview-content {
				background-color: @themeSwatchPreviewContentBackgroundColor;
				color: rgb(209, 210, 211);
				padding: 15px;

				.theme-preview-content-row {
					height: 20px;
					display: flex;
					align-items: center;
					justify-content: center;
					padding: 0 12px;
				}
				.theme-preview-content-placeholder.logo-placeholder {
					background-color: rgb(209, 210, 211);
					width: 12px;
					height: 12px;
					margin-bottom: 5px;
				}
				.theme-preview-content-row.login-box {
					height: 60px;

					.login-box-placeholder {
						padding: 8px;
						background: @white;
						height: inherit;

						.heading-placeholder {
							margin-bottom: 4px;
							width: 30px;
						}
						.login-box-input {
							width: 100%;
							border: 1px solid rgb(239, 240, 242);
							height: 11px;
							margin: 0px auto;
							display: flex;
							align-items: center;
							border-radius: 3px;
							justify-content: center;
							padding: 0px 3px;

							&:not(:first-child) {
								margin-bottom: 3px;
							}
						}
						.login-box-input.button {
							background: @black;

							.button-text-placeholder {
								opacity: 0.3;
							}
						}
					}
				}
				.theme-preview-content-placeholder {
					width: 60px;
					height: 3px;
					border-radius: 2px;
					background: rgb(239, 240, 242);
				}
			}
		}
	}
	.theme-name-container {
		padding: 16px;
		display: flex;
		font-size: 13px;
		line-height: 1.38463;
		font-weight: 400;
	}
	.theme-swatch-control {
		padding: 6px 10px;
	}
}

/*---------------------------------------
              Layout Swatch
----------------------------------------*/

.layout-swatch-container {
    position: relative;
    display: inline-block;

    &.premium-ribbon::after {
        content: "PREMIUM";
        position: absolute;
        top: 0;
        right: 16px;
        width: fit-content;
        min-width: 90px;
        font-size: .85em;
        height: 24px;
        display: flex;
        flex-direction: row;
        align-content: center;
        align-items: center;
        justify-content: space-around;
        font-weight: 500;
        color: #fff;
        background: linear-gradient(270deg,#ff9d4d 0,#ff7300 100%);
        clip-path: polygon(4% 0,0 100%,100% 100%,100% 0,100% 0);
        -webkit-clip-path: polygon(4% 0,0 100%,100% 100%,100% 0,100% 0);
        z-index: 2;
        border-top-right-radius: 4px;
    }

    .layout-swatch {
        display: inline-block;
        width: @layoutSwatchWidth;
        margin-right: 16px;
        vertical-align: top;
        margin-bottom: 16px;
        cursor: pointer;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
        overflow: hidden;

        &.active {
            border-color: @focusedFormBorderColor;
        }
        .layout-swatch-image {
            width: inherit;
        }
        .layout-swatch-placeholder {
            width: inherit;
            height: 125.61px;
            background-image: linear-gradient(to right,rgba(0,0,0,.03) 0,rgba(0,0,0,.08) 15%,rgba(245, 246, 246, 1) 30%);
        }
        .layout-swatch-control {
            display: flex;
            padding: 6px 10px;

            .field {
                margin: 0;
            }
        }
    }
}


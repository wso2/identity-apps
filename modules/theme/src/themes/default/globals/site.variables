/*-------------------
       Fonts
--------------------*/

// Needed to enable portals to be run offline.
// Ref - https://github.com/Semantic-Org/Semantic-UI/issues/1521
@importGoogleFonts : false;

@iconFont          : "font-awesome";
@primaryFont       : "''";
@fontFallbacks     : -apple-system, BlinkMacSystemFont, Segoe UI, HelveticaNeue-Light, Ubuntu, Droid Sans, sans-serif, @iconFont;
@fontName          : @primaryFont, @fontFallbacks;
@googleFontName    : 'Lato';

@bold              : 400;
@lightFontColor    : @lightTextColor;

/*-------------------
     Borders
--------------------*/

@relativeBorderRadius: 3px;
@absoluteBorderRadius: 3px;
@defaultBorderRadius: @absoluteBorderRadius;

@defaultBorderWidth: 1px;
@defaultBorderColor: @borderColor;
@lightBorderColor: lighten(@borderColor, 40);

/*-------------------
    Brand Colors
--------------------*/

@primaryColor        : @orange;
@secondaryColor      : #E0E1E2;
@accentColor1        : #173163;
@accentColor2        : #f5385b;
@accentColor3        : #00b7e1;
@accentColor4        : #92278F;

@lightPrimaryColor   : lighten(@primaryColor, 40);

/*-------------------
    Site Colors
--------------------*/

/*---  Colors  ---*/
@teal             : #22b7b1;
@blue             : #006faa;
@black            : #464646;
@green            : #7cd25a;
@orange           : #ff5000;
@lightGray        : #f1f1f1;
@darkGray         : #d9d9d9;
@athensGray       : #f9fafb;
@nobel            : #969696;
@iron             : #DADCE0;
@whiteSmoke       : #f5f5f5;
@dustyGray        : #9c9c9c;
@galleryGray      : #eeeeee;
@doveGray         : #666666;
@dullGreen        : #34a850;
@paleGray         : #d6d6d6;
@alabaster        : #fcfcfc;
@doveGray         : #616161;
@aliceBlue        : #f7fcff;
@alabaster        : #f7f7f7;
@pureBlack        : #000000;

/*-------------------
        Page
--------------------*/

@pageBackground      : #fbfbfb;
@lightPageBackground : @white;

/*-------------------
       Accents
--------------------*/

@defaultHoverBackgroundColor: @transparentBlack;

/*-------------------
       Inverted
--------------------*/

// inverted state colors are not defined site wide. Used the once that are in menu.variables etc.
@defaultInvertedHoverBackground: @transparentWhite;
@defaultInvertedActiveBackground: @strongTransparentWhite;

/*-------------------
     Image Sizes
--------------------*/

@littleWidth: 48px;
@x60Width: 60px;

/*-------------------
       Icons
--------------------*/

@iconHoverBgColor: @whiteSmoke;
@iconDefaultBgColor: #838383;

/*-------------------
    Icon Sizes
--------------------*/

@iconNano: 10px;
@iconDefault: 14px;
@iconMicro: 18px;
@iconX22: 22px;
@iconX30: 30px;
@iconMini: 35px;
@iconX50: 50px;
@iconX60: 60px;
@iconTiny: 80px;
@iconSmall: 150px;
@iconMedium: 300px;
@iconLarge: 450px;
@iconBig: 600px;
@iconHuge: 800px;
@iconMassive: 960px;

/*-------------------
   Header Component
--------------------*/
@headerHeight: 58px;

/*--------------
  Page Heading
---------------*/

@h3 : unit((22 / 14), rem);
@h4 : unit((19 / 14), rem);
@h5 : unit((16 / 14), rem);
@h6 : unit((14 / 14), rem);

@h6SubHeaderFontSize: unit((12 / 14), rem);

/*-------------------
       Links
--------------------*/

@linkColor           : @primaryColor;
@linkHoverUnderline  : underline;

/*--------------
   Form Input
---------------*/

@lightInputBackground : #fafafa;
@inputAddonWrapperOffset: 2.67142857em;

/*-------------------
    Focused Input
--------------------*/

/* Used on inputs, textarea etc */
@focusedFormBorderColor: lighten(@primaryColor, 30);

/* Used on dropdowns, other larger blocks */
@focusedFormMutedBorderColor: lighten(@primaryColor, 30);

/*-------------------
   Advanced search
--------------------*/

@advancedSearchWidth: 320px;
@mobileAdvancedSearchMinWidth: auto;
@advancedSearchDropdownMinWidth: 260px;
@advancedSearchDropdownMaxWidth: 520px;
@advancedSearchBorder: 1px solid @borderColor;


/*-------------------------
   Overview page widgets
--------------------------*/

@overviewPageWidgetHeaderMinHeight: 155px;

/*-------------------------
           Card
--------------------------*/

@defaultCardHoverBoxShadow: 0 2px 8px rgba(0, 0, 0, 0.09);
@defaultCardTransition: all 0.3s;
@defaultCardBorder: 1px solid #e8e8e8;

/*-------------------------
           Forms
--------------------------*/

@readOnlyFormFieldBgColor: #e9ecef;
@readOnlyFieldCursor: default;

/*-------------------
    Site Colors
--------------------*/

@warningColor: #EBA91C;

/*-------------------
       Layouts
--------------------*/

@dashboardLayoutSidePanelWidth: 300px;
@dashboardLayoutMobileContentPadding: 20px 14px;

@fluidDashboardLayoutTopPadding: 25px;
@fluidDashboardLayoutHorizontalPadding: 15px;
@fluidLayoutTopPadding: 25px;
@fluidLayoutHorizontalPadding: 15px;
@fluidDashboardLayoutHeaderPadding: 0 @fluidDashboardLayoutHorizontalPadding;
@fluidDashboardLayoutFooterPadding: 0 @fluidDashboardLayoutHorizontalPadding;
@fluidDashboardLayoutSidePanelPadding: @fluidDashboardLayoutTopPadding @fluidDashboardLayoutHorizontalPadding;
@fluidDashboardLayoutDesktopContentPadding: @fluidDashboardLayoutTopPadding 30px;

@pageLayoutContentPadding: @fluidDashboardLayoutTopPadding 30px;

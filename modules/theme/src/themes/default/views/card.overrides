/*-----------------------------
   Statistics Count Variation
------------------------------*/

.ui.card {
    &.stat-count-card {
        transition: @statCountCardTransition;
        border: @statCountCardBorder;
        box-shadow: none;

        .ui.statistic {
            margin-top: 0 !important;

            .label {
                color: @lightFontColor;
            }
        }
        &:hover {
            transform: none;
            text-decoration: none;
            cursor: pointer;
            box-shadow: @statCountCardHoverBoxShadow;
        }
    }
}

/*-----------------------------
      Relaxed Variation
------------------------------*/

.ui.card {
    &.relaxed {

/*-----------------------------------------
         Reusable Card Directives
-------------------------------------------*/

.ui.card {
    .coming-soon-ribbon {
        top: 0;
        width: fit-content;
        min-width: 100px;
        font-size: 0.8em;
        height: 24px;
        position: absolute;
        right: 0;
        display: flex;
        flex-direction: row;
        align-content: center;
        align-items: center;
        justify-content: space-around;
        font-weight: 500;
        color: @white;
        background: linear-gradient(270deg, lighten(@primaryColor, 15) 0%, @primaryColor 100%);
        clip-path: polygon(4% 0, 0 100%, 100% 100%, 100% 0, 100% 0);
        -webkit-clip-path: polygon(4% 0, 0 100%, 100% 100%, 100% 0, 100% 0);
    }
}

.ui.card {

    &.context-card {
        padding: 15px;
    }
    .no-borders {
        border: none !important;
    }

    .application-tile {
        position: relative;
        align-content: space-between;
        background-color: @galleryGray;
        border-radius: 8px;
        cursor: pointer;
        flex-direction: column;
        justify-content: space-between;
        height: 150px;
        padding: 15px;
        transition: @selectionCardTransition;
        border: @selectionCardBorder;
        box-shadow: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        display: flex !important;

        &:hover {
            transform: none;
            text-decoration: none;
            cursor: pointer;
            box-shadow: @defaultCardHoverBoxShadow;
        }
        &.auto-vh-center {
            justify-content: center;
            align-content: center;
            align-items: center;
            justify-items: center;
        }
        &.outlined {
            background-color: unset !important;
            box-shadow: unset !important;
            border-style: dashed;
            border-width: 2px;
            border-color: lightgray;
        }
        &.cursor-not-allowed {
            pointer-events: none !important;
            cursor: not-allowed !important;
        }
        &.cursor-pointer {
            cursor: pointer !important;
        }
        &.clipped {
            overflow: clip;
        }
        &.grayscale {
            filter: grayscale(100%);
        }
        &.opacity-50 {
            opacity: 0.5;
        }
        &.white-bg {
            background-color: white;
        }

        .header {
            margin-top: 0 !important;
            width: 100%;

            > h1 {
               margin: 0 !important;
               padding: 0 !important;
               font-size: 16px !important;
               font-weight: 500;
               text-overflow: ellipsis;
               overflow: hidden;
               white-space: nowrap;
               width: 90%;
            }

            > h2 {
               margin: 0 !important;
               padding: 0 !important;
               font-size: 12px !important;
               text-overflow: ellipsis;
            }
        }

        .body {
            height: 100%;
            display: flex;

            > h1 {
               position: relative;
               margin: 0 !important;
               padding: 0 !important;
               font-size: 16px !important;
               font-weight: 500;
               white-space: normal;
               word-break: break-all;
               word-wrap: break-word;
               width: 90%;
               text-align: left;
               overflow: clip; /* Faster than hidden */
               text-overflow: ellipsis; /* Required for line-clamp */
               display: -webkit-box; /* Required for line-clamp */
               line-clamp: 2; /* Number of lines to show */
               -webkit-line-clamp: 2; /* Chrome */
               -webkit-box-orient: vertical; /* Chrome */
            }

            &.center {
                justify-content: center;
                align-items: center;
            }

            &.start {
                justify-content: start;
                align-items: start;
            }

            .content {
                margin-top: 10px;
                font-size: 11px;
                max-height: 50px;
                overflow: hidden;
                text-overflow: ellipsis;
                background: -webkit-linear-gradient(top, transparent 80%, @galleryGray);
            }

            .stacked-content {
                display: flex;
                flex-direction: column;
                row-gap: 10px;
                text-align: center;
            }
        }

        .footer {
            display: flex;
            justify-content: space-between;

            &.justify-end {
                justify-content: end !important;
            }
            &.justify-start {
                justify-content: start !important;
            }
        }

        .coming-soon-ribbon {
            top: 0;
            width: fit-content;
            min-width: 100px;
            font-size: 0.8em;
            height: 24px;
            position: absolute;
            right: 0;
            display: flex;
            flex-direction: row;
            align-content: center;
            align-items: center;
            justify-content: space-around;
            font-weight: 500;
            color: @white;
            background: linear-gradient(270deg, lighten(@primaryColor, 15) 0%, @primaryColor 100%);
            clip-path: polygon(4% 0, 0 100%, 100% 100%, 100% 0, 100% 0);
            -webkit-clip-path: polygon(4% 0, 0 100%, 100% 100%, 100% 0, 100% 0);
        }
    }

    .card-expanded-navigation-button {
        border: none !important;
        border-radius: 6px;
        width: 100%;
        padding: 15px 0 0 0 !important;
        margin-bottom: 0 !important;
        display: flex !important;
        flex-direction: row !important;
        background-color: @galleryGray;
        text-decoration: none;
        align-items: center;
        text-overflow: ellipsis !important;
        color: @primaryColor !important;
        background-color: transparent !important;
        box-shadow: unset !important;
        height: 45px;

        &:hover {
            text-decoration: underline;
        }
    }

    .card-rich-navigation-button {
        color: darken(@galleryGray, 95) !important;
        justify-content: space-between !important;
        background-color: darken(@galleryGray, 3) !important;
        text-decoration: none !important;
        box-shadow: revert !important;
        padding: 15px !important;

        &:hover {
            color: darken(@galleryGray, 100) !important;
            background-color: darken(@galleryGray, 8) !important;
        }
    }
}


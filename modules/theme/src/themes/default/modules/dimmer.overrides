.ui.dimmer {
    z-index: 1500;
}

.ui.page.dimmer {
    display: flex !important;
}

.dimmable{
     &.circular{
         border-radius:50%;

         &.user-avatar {
             .upload-button {
                 box-shadow: none;
                 margin-right: 0 !important;

                 .icon {
                    color: @white !important;
                    margin-right: 0 !important;
                 }

                 &:hover, &:active, &:focus {
                     background: transparent !important;
                 }
             }
         }
     }
 }

/*-----------------------------
       Lighter Dimmer
------------------------------*/

.ui.dimmer {
    &.lighter {
        background-color: @lighterDimmerBackgroundColor !important;
    }
}

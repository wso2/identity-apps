/*******************************
            Button
*******************************/

/*-------------------
      Variations
--------------------*/

/* Secondary */
@secondaryTextColor: @textColor;

/*-------------------
       Element
--------------------*/

/* Text */
@fontWeight: 500;

/*-------------------
 Input add on button
--------------------*/

@inputAddOnBorder: 1px solid rgba(34, 36, 38, 0.15);

/*--------------------
 Modal primary button
----------------------*/

@positivePrimaryButtonColor: @positiveColor;
@negativePrimaryButtonColor: @negativeColor;
@warningPrimaryButtonColor: @warningColor;
@infoPrimaryButtonColor: @infoColor;

@modalPrimaryButtonFontColor: @white;

/*-------------------------
    Meta columns button
--------------------------*/

@metaColumnsButtonPadding: 12px 27px;

/*----------------------------
    Generate password button
------------------------------*/

@generatePasswordButtonPadding: 12px 27px;
@generatePasswordButtonMarginTop: 22px;

/*----------------------------
      OIDC Action button
------------------------------*/

@OIDCActionButtonMarginLeft: 10px;
@OIDCActionButtonMinWidth: auto;
@OIDCActionButtonPadding: 10px 15px;
@OIDCActionButtonFontSize: 0.9em;

/*----------------------------
      TOTP Modal Action button
------------------------------*/

@TOTPVerifyActionButtonWidth: 100%;

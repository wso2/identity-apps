.copy-field {
    input {
        font-size: 0.9em;
        padding: 0.7em!important;
        background-color: @galleryGray!important;
        border: none!important;
        font-style: italic;
        color: @doveGray!important;
    }
}

/*******************************
      Input Color Picker
*******************************/

.ui.input.labeled.react-color {
    > .ui.label {
        border: @border;
    }

    > .ui.react-color-popover {
        position: absolute;
        z-index: 2;

        > .ui.react-color-cover {
            bottom: 0;
            left: 0;
            position: fixed;
            right: 0;
            top: 0;
        }
    }
}

/*******************************
    Claim Search Variation
*******************************/
.ui.icon.input {
    &.available-claim-search {
       padding-left: 10px;
       width: 100%;
       margin: 10px 0px;
    }
}

.ui.input {
    &.panel-url-input {
        height: 2em;
        font-size: 0.9em;
        color: #666767 !important;

        button {
            height: 1.9em;
        }
    }
}

/*-------------------------------
         Copy Input Field
--------------------------------*/

.ui.input {
    &.copy-input {
        .copy-input-eye-icon {
            margin-right: @copyInputFieldMarginRight;
        }
    }
}

/*-------------------------------
         Password Input Field
--------------------------------*/

.ui.input {
    &.password-input {
        .password-input-eye-icon {
            margin-right: @passwordInputFieldMarginRight;
        }
    }
}

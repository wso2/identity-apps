@assignedRolesListLabelMarginLeft: 0.2em;
@assignedRolesListIconMarginLeft: 0.3em;
@InfoLabelBackgroundColor: #b5b7b7;
@InfoLabelBorderColor: #b5b7b7;

/*************************************
    Create Role Summary Variation
*************************************/

@RoleSummaryUserListBackgroundColor: #f7f7f7;
@RoleSummaryUserListBackgroundColor: #efefef;

/*************************************
    Transfer Component Variation
*************************************/

@TransferComponentSegmentWidth: 100% !important;
@TransferComponentSegmentheight: 311px !important;
@TransferComponentSegmentTableFontSize: 12px;
@TransferComponentSegmentApplicationLabelBackgroundColor: #99A1CC;
@TransferComponentSegmentApplicationLabelBorderColor: #8E95B6;
@TransferComponentSegmentInternalLabelBackgroundColor: #8DC1D4;
@TransferComponentSegmentInternalLabelBorderColor: #7CB5CA;
@TransferComponentSegmentApplicationAttributeSecondaryColor: #f99467;
@TransferComponentSegmentAudienceLabelBackgroundColor: #dcf0fa;
@TransferComponentSegmentAudienceLabelTextColor: #0082c3;
@TransferListSegmentHeight: 210px;

/*************************************
    User edit section Variation
*************************************/

@EditRoleSegmentHeaderMarginBottom: 0.4em;
@EditRoleSegmentHeaderWidth: 75% !important;
@EditRoleSegmentHeaderButtonMarginBottom: 0.4em !important;
@EditRoleSegmentFooterHeight: 60px !important;
@EditRoleSegmentMaxHeight: 490px;

/*************************************
    Roles listing variation
*************************************/

@rolesListingLabelMargin: 1em;

/*************************************
             Variation
*************************************/

/*-----------------------------------
            Ordinality
------------------------------------*/

@secondaryLighterBackground: @alabaster;

/*-----------------------------
         Jumbotron
------------------------------*/

@jumbotronInvertedHeadingColor: @white;

/*-----------------------------
      Emphasized Segment
------------------------------*/

@emphasizedSegmentBackgroundColor: @lightPageBackground;
@emphasizedSegmentBorder: @defaultBorderWidth solid @lightBorderColor;
@emphasizedSegmentBorderRadius: @defaultBorderRadius;

/*-----------------------------
      Clickable Segment
------------------------------*/

@clickableSegmentHover: @defaultHoverBackgroundColor;

/*-------------------------------
      Cookie Consent Banner
--------------------------------*/

@cookieConsentBannerPosition: fixed;
@cookieConsentBannerHorizontalSpacing: 16px;
@cookieConsentBannerBottom: 16px;
@cookieConsentBannerMaxWidth: 400px;
@cookieConsentBannerTop: auto;
@cookieConsentBannerOpacity: 0.95;
@cookieConsentBannerPadding: 2em;
@cookieConsentBannerImageMargin: 0 0 1.5em 0;
@cookieConsentBannerContentMargin: 0 0 1em 0;
@cookieConsentBannerBorder: @defaultBorderWidth solid transparent;
@cookieConsentBannerIconColor: @darkGray;
@cookieConsentBannerZIndex: 9999;

// Light Mode
@cookieConsentBannerColor: inherit;
@cookieConsentBannerBackground: @background;

// Inverted Mode
@cookieConsentBannerInvertedColor: @invertedTextColor;
@cookieConsentBannerInvertedBackground: @invertedBackground;
@cookieConsentBannerInvertedIconColor: @white;
@cookieConsentBannerInvertedBorder: @defaultBorderWidth solid transparent;

/*-------------------------------
        Image Preview
--------------------------------*/

@imagePreviewOutline: @defaultBorderColor dashed 2px;
@imagePreviewHeight: 120px;
@imagePreviewBorderRadius: @defaultBorderRadius;

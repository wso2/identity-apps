/*******************************
        Icon Overrides
*******************************/

i.icon {
    &.list-icon {
        font-size: 1em;
        margin-right: 8px;

        &.data-table-list-icon {
            min-width: @dataTableListIconMinWidth;
            min-height: @dataTableListIconMinHeight;
            padding-top: @dataTableListIconTopPadding;

            &:hover {
                background: rgba(0,0,0,.1);
            }
        }
    }

    &.bordered {
        border-radius: @defaultBorderRadius;
    }

    &.left-aligned-action {
        margin-left: 10px;
    }

    &.notification-icon {
        position: absolute;
        z-index: 1;
        top: -3px;
        left: 28px;
        display: inline-block!important;
        font-size: .74em!important;
    }

    &.locked-icon {
        position: absolute;
        z-index: 1;
        top: 25px;
        left: 25px;
        font-size: 12px !important;
        background-color: white;
        padding: 0px;
        border-radius: 50%;
        fill: #666666;
    }

    &.disabled-icon {
        position: absolute;
        z-index: 1;
        top: 25px;
        left: 28px;
        font-size: 14px !important;
        background-color: white;
        padding: 0px;
        border-radius: 50%;
        fill: #666666;
    }

    &.map-icon {
        margin: 18px 0 0 0;
    }

    &.padded-icon{
        padding-top: 0.7em;
    }

    &.primary {
        color: @primaryColor;
    }
}

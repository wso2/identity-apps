.ui.grid {
      .row {
           &.urlComponentLabelRow {
                margin-bottom: @ZeroMargin;
                padding-bottom: @SmallPadding;
           }

           &.urlComponentInputRow {
                margin-top: @ZeroMargin;
                padding-top: @ZeroMargin;
                margin-bottom: @ZeroMargin;
                padding-bottom: @SmallPadding;
           }

           &.urlComponentTagRow {
                margin-top: @SmallMargin;
                margin-bottom: @SmallMargin;
                padding: @ZeroPadding;

                .decoded-path {
                    white-space: pre;
                }
           }

           &.flex-row {
               display : flex;
               justify-content: space-between;
           }

      }

      .column {
          &.resource-item-column {
              display: flex;
              justify-content: row;
              align-items: center;

              >.image {
                  flex-shrink: 0;
              }
          }

          &.overflow-wrap {
              overflow-wrap: break-word;
          }
      }
}

/*-----------------------------------
 Application Attribute mapping variation
-------------------------------------*/

.ui.grid {
     &.claim-mapping {
         .row {
           &.claim-list-row {
                 .column {
                   &.claim-list-column {
                     overflow-y: auto;
                     height: 250px;
                     overflow-x: hidden;
                     &.selected {
                       background-color: #f4f7f9
                     }
                   }
                 }
             }
          }
     }
     &.claim-mapping-item {
         .row {
           &.claim-mapping-row {
              vertical-align: middle;
              min-height: 75px;
              .column {
                 &.claim-mapping-edit-column {
                     display: flex;
                     flex-direction: row;
                 }
              }
              &.selected {
                min-height: 70px
              }
           }
         }
     }
}

/*-----------------------------------
          Transfer Component
-------------------------------------*/

.ui.grid {
     &.transfer-list {

         width: 100% !important;
         margin-left: 0em !important;

         .row {
             &.transfer-list-row {
                 display: flex;
                 justify-content: space-between;
                 flex-wrap: nowrap;

                 .column {
                     flex-grow: 1;
                     flex-shrink: 1;

                     &.transfer-list-button-column {
                         flex-grow: 0;
                         width: unset !important;
                         padding: 0 !important;
                         flex-shrink: 0;

                         .ui.basic.button {
                             margin-bottom: 1em;
                             margin-right: 0;
                         }

                         .row {
                             text-align: center;
                             min-width: 50px !important;
                         }
                     }
                 }
             }
         }

         &.compact {
            .transfer-list-column {
                padding: 0;
            }
         }

         &.bordered {
            .transfer-segment {
                border: @defaultBorderWidth solid @defaultBorderColor;
                border-radius: @defaultBorderRadius;
            }
         }
     }
}

/*----------------------------------
     Column with bottom gutters
------------------------------------*/

.ui.grid {
    .row {
        .column {
            &.with-bottom-gutters {
                padding-bottom: (@gutterWidth / 2);
            }

            &.centered-text {
                margin-top: auto;
                margin-bottom: auto;

                 &::after {
                    margin: -0.2em 0 0 0.2em;
                    content: '*';
                    color: #db2828;
                 }
            }

              &.session-display {
                 padding-top: 0.5em;
              }
        }
    }
}

/*----------------------------------
  Column count exceeded Scenario
------------------------------------*/

.ui.grid {
    .row {
        &.column-count-exceeded {
            .column {
                padding-bottom: (@gutterWidth / 2);
            }
        }
         &.session-display-padded {
              padding-top: 0.25em;
              padding-bottom: 0.25em;
         }
    }
}

/*----------------------------------
     Certificate Grid variation
------------------------------------*/

.ui.grid {
    &.certificate-issuer {
        margin-top: 0rem;
        margin-bottom: 2rem;

        .row {
            padding-bottom: 0rem;
        }
    }
}

/*----------------------------------
    Organization Switcher  Grid
------------------------------------*/

.ui.grid {
    &.organization-list-grid {
        max-height: 300px;
        overflow-y: auto;
    }

    .row{
        &.organization-list-row {
            cursor: pointer;
        }
    }
}

/*----------------------------------
   Share App Transfer List  Grid
------------------------------------*/

.ui.grid {
    &.share-app-modal {
        margin-top: 0 !important;

        .transfer-list-row {
            padding-top: 0 !important;
        }
    }
}

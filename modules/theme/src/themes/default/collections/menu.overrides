/*******************************
         Theme Overrides
*******************************/

.ui.menu.fixed {
    &.app-header, &.app-footer {
        .item {
            &:hover, &:active, &:focus, &:visited {
                background: transparent;
            }
        }
    }
    &.app-header {
        box-shadow: none;

        .user-dropdown {
            padding-right: 0;

            &:hover {
                background: transparent;
            }
            .divider {
                margin: 0;
            }
            .user-dropdown-trigger {
                .username {
                    display: inline-block;
                    margin-right: 0.7em;
                }
            }
            .header {
                .name {
                    font-weight: bold;
                }
                .email {
                    color: @nobel;
                }
            }
            .linked-accounts-list {
                max-height: 200px;
                overflow: auto;
            }
            .linked-account {
                background: @whiteSmoke;
                border-top: 1px solid #ccc;
                border-top-color: rgba(0,0,0,.2);
                margin-top: 0;
                margin-bottom: 0;

                &:hover {
                    cursor: pointer;
                    background: darken(@whiteSmoke, 2);
                }
                &:first-child {
                    border-top: 0;
                }
                .name {
                    font-weight: 400;
                }
                .email {
                    color: @nobel;
                }
            }
            .action-panel {
                border-top: 1px solid #ccc;
                border-color: rgba(0,0,0,.2);
                padding: 10px 5px;

                &:hover {
                    background: transparent !important;
                }

                .action-button {
                    background: #f8f8f8;
                    border: 1px solid #c6c6c6;
                    line-height: 28px;
                    padding: 6px 20px;
                    color: #666;

                    &, &:hover {
                        text-decoration: none;
                    }
                }
            }
        }
        .ui.dropdown.item.user-dropdown .menu .item.linked-account {
            &, &:not(.filtered) {
                display: flex;
                padding: @relativeMini @relativeLarge;
            }
        }
        .ui.dropdown.item.user-dropdown .menu .item.header {
            &, &:not(.filtered) {
                display: flex;
                padding: @relativeMini @relativeLarge;
            }
            .ui.divider {
                margin: 0.5rem 0rem;
            }
        }
    }
    &.app-footer {
        min-height: @appFooterMinHeight;

        .footer-link, .footer-dropdown .dropdown-trigger.link {
            color: @primaryColor;

            &:hover {
                text-decoration: underline;
                cursor: pointer;
            }
        }
    }
}

.ui.vertical.menu {
    &.side-panel {
        // override the box shadow and border in the semantic ui menu component
        box-shadow: none;
        border-radius: 0;

        &.desktop {
            border: none;

            .side-panel-item {
                &:before {
                    display: none;
                }
                &.active {
                    background: transparent;
                }
            }
        }

        &.mobile {
            border-top: none;
            border-left: none;
            border-right: none;
        }

        .side-panel-item {
            .route-name {
                cursor: pointer;
                color: @sidePanelDefaultFontColor;
                padding: 10px 5px;
            }

            svg, .icon {
                display: inline-block;
                vertical-align: middle;
                line-height: 1;
                width: 18px;
                height: 18px;

                .path {
                    fill: @sidePanelDefaultFontColor;
                }
            }

            &.active {
                // override semantic ui menu item active background color
                background-color: transparent;

                .route-name {
                    color: @sidePanelActiveFontColor;
                }
                svg, .icon {
                    .path {
                        fill: @sidePanelActiveFontColor;
                    }
                }
            }

            &:hover {
                // override semantic ui menu item hover background color
                background-color: transparent;

                .route-name {
                    color: @sidePanelHoverFontColor;
                }
                svg, .icon {
                    .path {
                        fill: @sidePanelHoverFontColor;
                    }
                }
            }
        }
    }
}

// Fix for the unstackable list item images getting weird sizes on mobile.
@media only screen and (max-width: 767px) {
    .ui.menu.fixed {
        &.app-header {
            .user-dropdown {
                .linked-accounts-list {
                    .ui.image.user-image.user-avatar.little {
                        width: @littleWidth !important;
                    }
                }
            }
        }
    }
}

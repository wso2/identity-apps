{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [ "types/*" ]
        }
    },
    "exclude": [
        "coverage",
        "dist",
        "node_modules",
        "scripts",
        "test-configs",
        "jest.config.ts",
        "**/tests/*",
        "**/__tests__/*",
        "**/__mocks__/*",
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}

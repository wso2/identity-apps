        </copy>
    </target>

    <target
        name="move-layouts"
        depends="
            copy-layouts-into-authentication-portal,
            copy-layouts-into-recovery-portal,
            copy-layouts-into-sms-otp-authentication-portal,
            copy-layouts-into-x509-certificate-authentication-portal"
    />

</project>

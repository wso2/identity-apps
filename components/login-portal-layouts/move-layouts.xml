<project name="login-portal-layouts" basedir=".">

    <!-- Copy layouts to the authentication-portal -->
    <target name="check-authentication-portal-layout-dir">
        <available 
            property="authentication-portal.layouts.dir.exists" 
            file="../../apps/authentication-portal/src/main/webapp/extensions/layouts" 
            type="dir"
        />
    </target>

    <target 
        name="create-authentication-portal-layouts-dir" 
        depends="check-authentication-portal-layout-dir" 
        unless="check-authentication-portal-layout-dir"
    >
        <mkdir dir="../../apps/authentication-portal/src/main/webapp/extensions/layouts"/>
    </target>

    <target name="copy-layouts-into-authentication-portal" depends="create-authentication-portal-layouts-dir">
        <echo message="--- copying layouts to Authentication Portal ---"/>
        <copy todir="../../apps/authentication-portal/src/main/webapp/extensions/layouts/" overwrite="true">
            <fileset dir="layouts/" includes="**" />
        </copy>
    </target>

    <!-- Copy layouts to the recovery-portal -->
    <target name="check-recovery-portal-layout-dir">
        <available 
            property="recovery-portal.layouts.dir.exists" 
            file="../../apps/recovery-portal/src/main/webapp/extensions/layouts" 
            type="dir"
        />
    </target>

    <target 
        name="create-recovery-portal-layouts-dir" 
        depends="check-recovery-portal-layout-dir" 
        unless="check-recovery-portal-layout-dir"
    >
        <mkdir dir="../../apps/recovery-portal/src/main/webapp/extensions/layouts"/>
    </target>

    <target name="copy-layouts-into-recovery-portal" depends="create-recovery-portal-layouts-dir">
        <echo message="--- copying layouts to Recovery Portal ---"/>
        <copy todir="../../apps/recovery-portal/src/main/webapp/extensions/layouts/" overwrite="true">
            <fileset dir="layouts/" includes="**" />
        </copy>
    </target>

    <!-- Copy layouts to the sms-otp-authentication-portal -->
    <target name="check-sms-otp-authentication-portal-layout-dir">
        <available 
            property="sms-otp-authentication-portal.layouts.dir.exists" 
            file="../../apps/sms-otp-authentication-portal/src/main/webapp/extensions/layouts" 
            type="dir"
        />
    </target>

    <target 
        name="create-sms-otp-authentication-portal-layouts-dir" 
        depends="check-sms-otp-authentication-portal-layout-dir" 
        unless="check-sms-otp-authentication-portal-layout-dir"
    >
        <mkdir dir="../../apps/sms-otp-authentication-portal/src/main/webapp/extensions/layouts"/>
    </target>

    <target name="copy-layouts-into-sms-otp-authentication-portal" depends="create-sms-otp-authentication-portal-layouts-dir">
        <echo message="--- copying layouts to SMS OTP Authentication Portal ---"/>
        <copy todir="../../apps/sms-otp-authentication-portal/src/main/webapp/extensions/layouts/" overwrite="true">
            <fileset dir="layouts/" includes="**" />
        </copy>
    </target>

    <!-- Copy layouts to the x509-certificate-authentication-portal -->
    <target name="check-x509-certificate-authentication-portal-layout-dir">
        <available 
            property="x509-certificate-authentication-portal.layouts.dir.exists" 
            file="../../apps/x509-certificate-authentication-portal/src/main/webapp/extensions/layouts" 
            type="dir"
        />
    </target>

    <target 
        name="create-x509-certificate-authentication-portal-layouts-dir" 
        depends="check-x509-certificate-authentication-portal-layout-dir" 
        unless="check-x509-certificate-authentication-portal-layout-dir"
    >
        <mkdir dir="../../apps/x509-certificate-authentication-portal/src/main/webapp/extensions/layouts"/>
    </target>

    <target name="copy-layouts-into-x509-certificate-authentication-portal" depends="create-x509-certificate-authentication-portal-layouts-dir">
        <echo message="--- copying layouts to x509 Certificate Authentication Portal ---"/>
